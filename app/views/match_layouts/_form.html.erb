<div class="container-fluid">

  <%= form_with(model: match_layout, id: 'match-layout-form') do |form| %>

    <% if match_layout.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(match_layout.errors.count, "error") %> prohibited this match_layout from being saved:</h2>

        <ul>
          <% match_layout.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <div class="form-check">
          <%= form.check_box :is_playing, class: 'form-check-input' %>
          <%= form.label :is_playing, class: 'form-check-label' %>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :player1_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :player1_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :player2_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :player2_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :match_name, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :match_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :player1_score, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :player1_score, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :player2_score, class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :player2_score, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= form.submit(class: 'sr-only') %>
      </div>
    </div>

  <% end %>

</div>
